{
  "scripts": {
    "pretest": "npm run lint --silent",
    "test": "meteor test --once --driver-package dispatch:mocha-phantomjs",
    "test-watch": "meteor test --driver-package practicalmeteor:mocha",
    "test-app-watch": "meteor test --full-app --driver-package practicalmeteor:mocha",
    "lint": "eslint --ext .js,.jsx .",
    "chimp-watch": "chimp --ddp=http://localhost:3000 --watch --mocha --path=tests"
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "@devexpress/dx-react-core": "^1.10.5",
    "@devexpress/dx-react-grid": "^1.10.5",
    "@devexpress/dx-react-grid-material-ui": "^1.10.5",
    "@material-ui/codemod": "^1.1.0",
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "@material-ui/styles": "^3.0.0-alpha.10",
    "apollo-boost": "^0.3.1",
    "apollo-client": "^2.5.1",
    "apollo-server-express": "^2.4.8",
    "autoprefixer": "^6.7.7",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "ee-first": "^1.1.1",
    "express": "^4.16.4",
    "faker": "^3.1.0",
    "file-saver": "^2.0.1",
    "graphql": "^14.2.1",
    "graphql-server-express": "^1.4.0",
    "graphql-tools": "^4.0.4",
    "intl": "^1.2.5",
    "jszip": "^3.2.1",
    "lodash": "^4.17.11",
    "material-ui": "^0.20.2",
    "material-ui-superselectfield": "^1.10.0",
    "papaparse": "^4.6.3",
    "plotly.js": "^1.46.1",
    "prop-types": "^15.7.2",
    "range-parser": "^1.2.0",
    "react": "^16.8.6",
    "react-addons-pure-render-mixin": "^15.6.2",
    "react-addons-update": "^15.6.2",
    "react-dom": "^16.8.6",
    "react-export-excel": "^0.5.3",
    "react-flexbox-grid": "^2.1.2",
    "react-pivottable": "^0.4.0",
    "react-plotly.js": "^2.3.0",
    "react-router": "^3.2.1",
    "react-speed-dial": "^0.4.7",
    "react-tap-event-plugin": "^3.0.3",
    "react-xlsx-workbook": "0.0.5",
    "simpl-schema": "^1.5.5",
    "webfontloader": "1.6.28",
    "xlsx": "^0.14.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "babel-eslint": "^6.1.2",
    "date-fns": "^1.30.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.2.2",
    "eslint-plugin-react": "^6.2.2",
    "form-serialize": "^0.7.2",
    "json-loader": "^0.5.7",
    "meteor-node-stubs": "^0.2.3",
    "moment": "^2.24.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-test-utils": "^15.3.1",
    "react-infinite-calendar": "^2.3.1",
    "shelljs": "^0.7.4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "meteor/no-session": "off",
      "object-shorthand": [
        "error",
        "always",
        {
          "avoidQuotes": false
        }
      ],
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/forbid-prop-types": "off",
      "jsx-a11y/no-static-element-interactions": "off"
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
